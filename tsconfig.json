{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["app/javascript/*"]
    },
    "lib": ["dom", "es2015"],
    "types": ["node", "@hotwired/stimulus"]
  },
  "include": [
    "app/javascript/**/*"
  ]
}
